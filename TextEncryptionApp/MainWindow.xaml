<Window x:Class="TextEncryptionApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Главное меню" Height="300" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="encryptButton" Content="Шифрование текста" Width="200" Margin="10" Click="EncryptButton_Click" />
            <Button x:Name="decryptButton" Content="Дешифровка текста" Width="200" Margin="10" Click="DecryptButton_Click" />
            <Button Content="Open Database" Width="119" Height="19" Click="DatabaseButton_Click" />
        </StackPanel>
    </Grid>
</Window>

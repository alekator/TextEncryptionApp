<Window x:Class="TextEncryptionApp.Views.EncryptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Шифрование текста" Height="400" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Key:" Visibility="Collapsed" Name="keyLabel" Grid.ColumnSpan="2" />
        <TextBox Name="keyTextBox" Visibility="Collapsed" Width="200" Margin="50,0,30,0" />
        <ComboBox x:Name="encryptionMethodComboBox" Margin="10,18,10,341" Height="25" Grid.ColumnSpan="2" />
        <TextBox x:Name="inputTextBox" Margin="10,55,10,0" Height="100" VerticalAlignment="Top" AcceptsReturn="True" Grid.ColumnSpan="2" />
        <TextBox x:Name="outputTextBox" Margin="10,192,10,0" Height="100" VerticalAlignment="Top" AcceptsReturn="True" IsReadOnly="True" Grid.ColumnSpan="2" />
        <Button x:Name="encryptButton" Content="Произвести шифрование" Margin="10,167,10,0" VerticalAlignment="Top" Click="EncryptButton_Click" Grid.ColumnSpan="2" />
        <Button x:Name="sendButton" Content="Отправить" Margin="10,305,10,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Click="SendButton_Click"/>
        <Button x:Name="saveButton" Content="Сохранить" Margin="10,339,10,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Click="SaveButton_Click"/>
    </Grid>
</Window>
